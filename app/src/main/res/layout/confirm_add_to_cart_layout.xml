<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:id="@+id/iv_confirm_product"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_product_confirm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milk Tea"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_product_confirm_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$3.75"
                        android:padding="4dp"
                        android:background="@drawable/text_round"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_sugar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sugar: 100%"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                        <TextView
                            android:id="@+id/tv_ice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ice: 100%"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:textSize="14sp"
                            android:textStyle="italic"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Topping extras"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_topping_extras"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Milk Crean"
                android:textStyle="italic"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>